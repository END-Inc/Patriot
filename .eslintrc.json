{
   "extends":[
      "hardcore",
      "hardcore/ts"
   ],
   "parserOptions":{
      "project":"./tsconfig.json"
   },
   "env":{
      "browser":true
   },
   "settings":{
      "node":{
         "resolvePaths":[
            "node_modules/@types"
         ],
         "tryExtensions":[
            ".json",
            ".node",
            ".ts",
            ".d.ts"
         ]
      }
   },
   "rules":{
      "@typescript-eslint/prefer-readonly-parameter-types":[
         "warn",
         {
            "ignoreInferredTypes":true
         }
      ]
   }
}